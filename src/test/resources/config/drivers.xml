<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

    <!-- В данном примере конфигурация создается непосредственно для данного драйвера -->
    <bean id="chromeDriver" class="ru.ibsqa.qualit.selenium.driver.WebDriverFacade" destroy-method="quit">
        <property name="defaultDriver" value="true"/>
        <property name="driverFactory">
            <bean class="ru.ibsqa.qualit.selenium.driver.WebDriverFactory">
                <constructor-arg>
                    <bean class="ru.ibsqa.qualit.selenium.driver.configuration.DefaultDriverConfiguration">
                        <property name="driverType">
                            <value type="ru.ibsqa.qualit.selenium.driver.WebSupportedDriver">CHROME</value>
                        </property>
                        <property name="maximizeWindow" value="false"/>
                    </bean>
                </constructor-arg>
            </bean>
        </property>
    </bean>

    <!-- Создание конфигурации для ее последующегно использования в драйверах -->
    <bean id="firefoxDriverConfiguration"
          class="ru.ibsqa.qualit.selenium.driver.configuration.DefaultDriverConfiguration">
        <property name="driverType">
            <value type="ru.ibsqa.qualit.selenium.driver.WebSupportedDriver">FIREFOX</value>
        </property>
    </bean>

    <!-- В данном примере драйвер использует ранее созданную конфигурацию по ее id -->
    <bean id="firefoxDriver" class="ru.ibsqa.qualit.selenium.driver.WebDriverFacade" destroy-method="quit">
        <property name="driverFactory">
            <bean class="ru.ibsqa.qualit.selenium.driver.WebDriverFactory">
                <constructor-arg ref="firefoxDriverConfiguration"/>
            </bean>
        </property>
    </bean>

</beans>